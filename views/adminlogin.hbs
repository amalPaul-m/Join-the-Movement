{{#section 'styles'}}
<link rel="stylesheet" href="/stylesheets/index.css">
<link rel="stylesheet" href="/stylesheets/adminlogin.css">
{{/section}}

<div class="d-flex flex-column bg-setup-admin text-white">
<div class="container mx-auto px-4">
  
  <!-- Navbar -->
  <nav class="navbar navbar-expand-md navbar-dark bg-transparent px-4 py-5">
    <div class="container-fluid">

      <!-- Toggler -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </nav>

    <!-- Login Section -->
    <main class="d-flex justify-content-center align-items-center mt-3">
      <div class="card shadow-lg p-4 rounded-4" style="max-width: 400px; background-color: transparent; width: 100%;">
        <h3 class="text-center mb-4 text-light">Admin Login</h3>
        <span class="text-danger text-center">{{message}}</span>
        <form id="loginForm" action="/admin" method="post" novalidate>
          
          <!-- Email -->
          <div class="mb-3">
            <label for="email" class="form-label text-light">User Name</label>
            <div class="input-group custom-input">
              <input type="text" class="form-control" id="email" name="user" placeholder="Enter your email" required>
              <span class="input-group-text"><i class="fas fa-user"></i></span>
              <div class="invalid-feedback">Please enter valid user Name.</div>
            </div>
          </div>

          <!-- Password -->
          <div class="mb-3">
            <label for="password" class="form-label text-light">Password</label>
            <div class="input-group custom-input">
              <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required minlength="6">
              <button type="button" class="btn btn-outline-secondary toggle-btn" id="togglePassword">
                <i class="fas fa-eye"></i>
              </button>
              <div class="invalid-feedback">Password must be at least 6 characters long.</div>  
            </div>
          </div>

          <!-- Submit -->
          <button type="submit" class="btn btn-primary w-100 mt-3 mb-3 boarder-radius">LOGIN</button>
        </form>
      </div>
    </main>

  <!-- Footer -->
  <footer class="opacity-50 text-secondary text-center mt-5 py-5">

    <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
      <div class="d-flex flex-wrap justify-content-center gap-2">
        <a href="#" class="text-decoration-none text-secondary">Disclaimer</a>
        <a href="#" class="text-decoration-none text-secondary">Terms of Use</a>
        <a href="#" class="text-decoration-none text-secondary">Cookies</a>
      </div>

      <div class="text-secondary small">
        All copyright 2025 Â© JTM
      </div>

      <div class="text-secondary small">
        Avenue Louise 54, Brussels, Belgium
      </div>

    </div>
  </footer>
</div>
</div>

{{#section 'scripts'}}
<script src="/javascripts/index.js"></script>
<script src="/javascripts/adminlogin.js"></script>
<script src="/javascripts/login.js"></script>
{{/section}}

