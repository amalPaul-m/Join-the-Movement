    <!-- Signup Section -->
  <main class="d-flex justify-content-center align-items-center mt-3 px-3">
    <div class="card p-4 shadow-lg w-100" style="max-width: 400px; background-color: transparent; width: 100%;">
      <h3 class="text-center mb-4 text-light">Sign Up</h3>

      <span class="text-center text-danger">{{content}}</span>

      <form id="signupForm" method="POST" action="/signup" novalidate>
        
        <!-- First Name -->
        <div class="mb-3">
          <label class="form-label text-light">Full Name</label>
          <div class="input-group custom-input">
          <input type="text" class="form-control form-border" name="name" placeholder="Enter your full name" required>
          <div class="invalid-feedback">Name is required.</div>
          </div>
        </div>

        <!-- Email -->
        <div class="mb-3">
          <label for="email" class="form-label text-light">Email</label>
          <div class="input-group custom-input">
          <input type="email" class="form-control form-border" name="email" placeholder="Enter your email" required>
          <div class="invalid-feedback">Enter a valid email.</div>
          </div>
        </div>

        <!-- Password -->
        <div class="mb-3 position-relative">
          <label for="password" class="form-label text-light">Password</label>
          <div class="input-group custom-input">
            <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required minlength="6">
            <span class="input-group-text togglePassword" style="cursor: pointer;">
              <i class="fas fa-eye"></i>
            </span>
            <div class="invalid-feedback">Password must be at least 6 characters long.</div>  
          </div>
        </div>

        <!-- Confirm Password -->
        <div class="mb-3 position-relative">
          <label class="form-label text-light">Confirm Password</label>
          <div class="input-group custom-input">
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required>
            <span class="input-group-text togglePassword" style="cursor: pointer;">
              <i class="fas fa-eye"></i>
            </span>
            <div class="invalid-feedback">Passwords must match.</div>
          </div>
        </div>

        <!-- Country -->
        <div class="mb-3">
          <label class="form-label text-light">Country</label>
          <div class="input-group custom-input">
            <select class="form-select text-secondary" id="country" name="country" required>
              <option value="">Select Country</option>
              <option value="India" data-code="91" data-pattern="^[0-9]{10}$">India</option>
              <option value="USA" data-code="1" data-pattern="^[0-9]{10}$">USA</option>
              <option value="Canada" data-code="1" data-pattern="^[0-9]{10}$">Canada</option>
              <option value="UK" data-code="44" data-pattern="^[0-9]{10,11}$">UK</option>
              <option value="Germany" data-code="49" data-pattern="^[0-9]{10,12}$">Germany</option>
            </select>
          </div>
          <div class="invalid-feedback">Please select a country.</div>
        </div>

        <!-- Mobile -->
        <div class="mb-3">
          <label class="form-label text-light">Mobile Number</label>
          <div class="input-group custom-input">
            <span class="input-group-text form-border" id="countryCode">+--</span>
            <input type="tel" class="form-control form-border" id="mobileInput" placeholder="Enter mobile number" required>
            <div class="invalid-feedback" id="mobileError">Enter a valid number.</div>
          </div>
        </div>

        <!-- Hidden field for mobile with country code -->
        <input type="hidden" id="mobile" name="mobile">



        <!-- Submit -->
        <button type="submit" class="btn btn-primary boarder-radius w-100 mt-3">Sign Up</button>
      </form>
