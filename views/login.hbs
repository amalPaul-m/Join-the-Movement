{{#section 'styles'}}
<link rel="stylesheet" href="/stylesheets/index.css">
{{/section}}

<div class="d-flex flex-column bg-setup text-white">
  <div class="container px-4">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-md navbar-dark bg-transparent px-4 py-3">
      <div class="container-fluid">
        <a class="navbar-brand fw-bold fs-5" href="#">
          <img src="/images/Logo.png" alt="logo" width="50">
        </a>

        <!-- Toggler -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Links -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto fw-light">
            <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/about">About Us</a></li>
            <li class="nav-item"><a class="nav-link" href="#">News</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Early Bird</a></li>
            <li class="nav-item"><a class="nav-link active" href="#">Login</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Login Section -->
    <main class="d-flex justify-content-center align-items-center mt-3">
      <div class="card shadow-lg p-4 rounded-4" style="max-width: 400px; background-color: transparent; width: 100%;">
        <h3 class="text-center mb-4 text-light">Login to Your Account</h3>
        <span class="text-center text-danger">{{message}}</span>
        <form id="loginForm" action="/userlogin" method="post" novalidate>
          
          <!-- Email -->
          <div class="mb-3">
            <label for="email" class="form-label text-light">Email</label>
            <div class="input-group custom-input">
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
              <span class="input-group-text"><i class="fas fa-user"></i></span>
              <div class="invalid-feedback">Please enter a valid email address.</div>
            </div>
          </div>

          <!-- Password -->
          <div class="mb-3">
            <label for="password" class="form-label text-light">Password</label>
            <div class="input-group custom-input">
              <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required minlength="6">
              <button type="button" class="btn btn-outline-secondary toggle-btn" id="togglePassword">
                <i class="fas fa-eye"></i>
              </button>
              <div class="invalid-feedback">Password must be at least 6 characters long.</div>  
            </div>
          </div>

          <!-- Submit -->
          <button type="submit" class="btn btn-primary w-100 mt-3 mb-3 boarder-radius">LOGIN</button>
        </form>
        <a  href="/auth/google" class="btn btn-outline-secondary boarder-radius"><img src="/images/google.png" alt="" height="25"> <span class="ps-2">Login with Google</span></a>
        <span class="pt-3 d-flex justify-content-between text-size text-secondary"> <span>Don't have an account ? <a href="/signup">SignUp</a></span> <a href="/forgot">Forgot Password</a></span>
      </div>
    </main>

    <!-- Footer -->
    <footer class="opacity-50 text-secondary text-center mt-auto py-2">
      <div class="d-flex justify-content-center gap-3 mb-3">
        <a href="#"><i class="fab fa-facebook fa-lg text-secondary"></i></a>
        <a href="#"><i class="fab fa-instagram fa-lg text-secondary"></i></a>
        <a href="#"><i class="fab fa-youtube fa-lg text-secondary"></i></a>
      </div>

      <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
        <div class="d-flex flex-wrap justify-content-center gap-2">
          <a href="#" class="text-decoration-none text-secondary">Disclaimer</a>
          <a href="#" class="text-decoration-none text-secondary">Terms of Use</a>
          <a href="#" class="text-decoration-none text-secondary">Cookies</a>
        </div>

        <div class="text-secondary small">Â© 2025 JTM</div>
        <div class="text-secondary small">Avenue Louise 54, Brussels, Belgium</div>
      </div>
    </footer>
  </div>
</div>

{{#section 'scripts'}}
<script src="/javascripts/login.js"></script>
{{/section}}
