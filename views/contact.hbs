<div class="d-flex flex-column bg-setup text-white">
<div class="container mx-auto px-4">
  
  <!-- Navbar -->
  <nav class="navbar navbar-expand-md navbar-dark bg-transparent px-4 py-3">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold fs-5" href="#">
        <img src="/images/Logo.png" alt="logo" width="100">
      </a>

      <!-- Toggler -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Links -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto  fw-light">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About Us</a></li>
          {{!-- <li class="nav-item"><a class="nav-link" href="#">News</a></li> --}}
          <li class="nav-item"><a class="nav-link active" href="/contact">Contact</a></li>
          <li class="nav-item"><a class="nav-link" href="/signup">Sign Up</a></li>
          <li class="nav-item"><a class="nav-link" href="/userlogin">Login</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <section class="contact-section container">
    <div class="row">
      
      <!-- Left Column: Form -->
      <div class="col-md-6">
        <h3 class="mb-4">CONTACT US!</h3>

        <form class="needs-validation" novalidate>
          <input type="text" class="form-control" placeholder="Your Name" required>
          <div class="invalid-feedback">Please enter your name.</div>

          <input type="email" class="form-control" placeholder="Email" required>
          <div class="invalid-feedback">Please enter a valid email.</div>

          <textarea class="form-control" placeholder="Message" rows="5" required></textarea>
          <div class="invalid-feedback">Please enter your message.</div>

          <button type="submit" class="btn btn-primary full-width-button btn-send">SEND</button>
        </form>
      </div>

      <div class="col col-md-1 "></div>
      <!-- Right Column: Contact Info -->
      <div class="col-md-5 contact-info mt-5 pt-5">
        <p><i class="bi bi-geo-alt-fill text-primary"></i> Rue du Vert Galant 282
        Liège, Belgium 4218
        </p>
        <p class="pt-3"><i class="bi bi-telephone-fill text-primary"></i> +32 496 33 93 71‬
        </p>
        <p class="pt-3"><i class="bi bi-envelope-fill text-primary"></i> support@jointhemovement.io</p>

      </div>

    </div>
  </section>

  <!-- Footer -->
  <footer class="opacity-50 text-secondary text-center mt-5 py-5">
    <div class="d-flex justify-content-center gap-3 mb-3">
      <a href="#"><i class="fab fa-facebook fa-lg text-secondary"></i></a>
      <a href="#"><i class="fab fa-instagram fa-lg text-secondary"></i></a>
      <a href="#"><i class="fab fa-youtube fa-lg text-secondary"></i></a>
    </div>

    <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
      <div class="d-flex flex-wrap justify-content-center gap-2">
        <a href="#" class="text-decoration-none text-secondary">Disclaimer</a>
        <a href="#" class="text-decoration-none text-secondary">Terms of Use</a>
        <a href="#" class="text-decoration-none text-secondary">Cookies</a>
      </div>

      <div class="text-secondary small">
        All copyright JTM © 2025
      </div>
      
    </div>
  </footer>
</div>
</div>

