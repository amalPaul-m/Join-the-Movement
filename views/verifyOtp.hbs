    <div class="{{alert}}">{{text}}</div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h3 class="mb-4">OTP Verification</h3>

                <form  id="otpForm" class="align" >
                    <div class=" d-flex justify-content-center align-items-center">
                        <div class="position-relative">
                            <div class="text-center">
                                <h6>{{content}}</h6>
                                <div class="pt-4"> <span>Enter the OTP below to verify it.</span></div>
                                <div id="otp" class="inputs d-flex flex-row justify-content-center mt-4">
                                    <input class="m-2 text-center form-control option-set rounded" name="first" type="text" id="first"
                                        maxlength="1" />
                                    <input class="m-2 text-center form-control option-set rounded" name="second" type="text"
                                        id="second" maxlength="1" />
                                    <input class="m-2 text-center form-control option-set rounded" name="third" type="text" id="third"
                                        maxlength="1" />
                                    <input class="m-2 text-center form-control option-set rounded" name="fourth" type="text"
                                        id="fourth" maxlength="1" />
                                    <input class="m-2 text-center form-control option-set rounded" name="fifth" type="text" id="fifth"
                                        maxlength="1" />
                                    <input class="m-2 text-center form-control option-set rounded" name="sixth" type="text" id="sixth"
                                        maxlength="1" />
                                </div>
                                <div class="pt-1 card-2"><span class="timer" id="resendTimer"></span> <a href="#"
                                        id="resendOtpBtn" class="text-decoration-none text-bold me-0"
                                        style="display: none;">Resend OTP</a>
                                    <input type="hidden" id="emailHidden" value="{{content}}" />
                                </div>
                                <div class="mt-4">
                                    <button type="submit" id="validateOtpBtn"
                                        class="btn btn-primary validate py-2 mt-3 hidebtn">Verify OTP</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

