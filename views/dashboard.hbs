{{#section 'styles'}}
<link rel="stylesheet" href="/stylesheets/index.css">
{{/section}}

<div class="d-flex flex-column bg-setup-admin text-white">
<div class="container mx-auto px-4">
  
  <!-- Navbar -->
  <nav class="navbar navbar-expand-md navbar-dark bg-transparent px-4 py-3">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold fs-5" href="#">
        <img src="/images/Logo.png" alt="logo" width="100">
      </a>

      <!-- Toggler -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Links -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto  fw-light">
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

    <h4 class="mt-5"><b>Users Details</b></h4>
    <div class="table-responsive mt-5">
      <table class="table align-middle">
        <thead>
          <tr>
            <th class="bg-transparent text-light">Sl.No </th>
            <th class="bg-transparent text-light">Name </th>
            <th class="bg-transparent text-light">Email ID </th>
            <th class="bg-transparent text-light">Phone Number </th>
            <th class="bg-transparent text-light">Country </th>
            <th class="bg-transparent text-light">Register Date </th>
          </tr>
        </thead>
        <tbody>
          <!-- Example Rows -->
          {{#each usersData}}
          <tr>
            <td class="bg-transparent text-light">{{addOne @index}}</td>
            <td class="bg-transparent text-light">{{this.name}}</td>
            <td class="bg-transparent text-light">{{this.email}}</td>
            <td class="bg-transparent text-light">{{this.phone}}</td>
            <td class="bg-transparent text-light">{{this.country}}</td>
            <td class="bg-transparent text-light">{{formatDate this.createdAt "DD/MM/YYYY hh:mm A"}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  

  <!-- Footer -->
  <footer class="opacity-50 text-secondary text-center mt-5 py-5">

    <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
      <div class="d-flex flex-wrap justify-content-center gap-2">
        <a href="#" class="text-decoration-none text-secondary">Disclaimer</a>
        <a href="#" class="text-decoration-none text-secondary">Terms of Use</a>
        <a href="#" class="text-decoration-none text-secondary">Cookies</a>
      </div>

      <div class="text-secondary small">
        All copyright JTM Â© 2025
      </div>

      <div class="text-secondary small">
        Avenue Louise 54, Brussels, Belgium
      </div>

    </div>
  </footer>
</div>
</div>

{{#section 'scripts'}}
<script src="/javascripts/index.js"></script>
{{/section}}