      </div>
    </div>
  </nav>


  <!-- Login Section -->
    <main class="d-flex justify-content-center align-items-center mt-3">
      <div class="card shadow-lg p-4 rounded-4" style="max-width: 400px; background-color: transparent; width: 100%;">
        <h3 class="text-center mb-4 text-light">Forgot Password ?</h3>
        <span class="text-danger text-center">{{content}}</span>
        <form id="forgot" action="/forgot" method="post" novalidate>
          
          <!-- Email -->
          <div class="mb-3">
            <label for="email" class="form-label text-light">Email</label>
            <div class="input-group custom-input">
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
              <span class="input-group-text"><i class="fas fa-user"></i></span>
              <div class="invalid-feedback">Please enter a valid email address.</div>
            </div>
          </div>

          <!-- Submit -->
          <button type="submit" class="btn btn-primary w-100 mt-3 mb-3 boarder-radius">Send OTP</button>
        </form>
        <span class="pt-3 text-center text-size text-secondary"> <a href="/userlogin" style="text-decoration:none;">Go back to login
                        page</a></span>
      </div>
    </main>


  <!-- Footer -->
