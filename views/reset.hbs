<div class="d-flex flex-column bg-setup text-white">
<div class="container mx-auto px-4">
  
  <!-- Navbar -->
  <nav class="navbar navbar-expand-md navbar-dark bg-transparent px-4 py-3">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold fs-5" href="#">
        <img src="/images/Logo.png" alt="logo" width="50">
      </a>

      <!-- Toggler -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Links -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto  fw-light">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About Us</a></li>
          <li class="nav-item"><a class="nav-link" href="#">News</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
          <li class="nav-item"><a class="nav-link" href="/signup">Sign Up</a></li>
          <li class="nav-item"><a class="nav-link" href="/userlogin">Login</a></li>
        </ul>
      </div>
    </div>
  </nav>


  <main class="d-flex justify-content-center align-items-center mt-3 px-3">
    <div class="card p-4 shadow-lg w-100" style="max-width: 400px; background-color: transparent; width: 100%;">
      <h3 class="text-center mb-4 text-light">Change Password</h3>

      <form id="signupForm" method="POST" action="/reset" novalidate>
    
        <!-- Password -->
        <div class="mb-3 position-relative">
          <label for="password" class="form-label text-light">Password</label>
          <div class="input-group custom-input">
            <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required minlength="6">
            <span class="input-group-text togglePassword" style="cursor: pointer;">
              <i class="fas fa-eye"></i>
            </span>
            <div class="invalid-feedback">Password must be at least 6 characters long.</div>  
          </div>
        </div>

        <!-- Confirm Password -->
        <div class="mb-3 position-relative">
          <label class="form-label text-light">Confirm Password</label>
          <div class="input-group custom-input">
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required>
            <span class="input-group-text togglePassword" style="cursor: pointer;">
              <i class="fas fa-eye"></i>
            </span>
            <div class="invalid-feedback">Passwords must match.</div>
          </div>
        </div>

        <!-- Submit -->
        <button type="submit" class="btn btn-primary boarder-radius w-100 mt-3">Change Password</button>
      </form>
    </div>
  </main>

  <!-- Footer -->
  <footer class="opacity-50 text-secondary text-center mt-5 py-5">
    <div class="d-flex justify-content-center gap-3 mb-3">
      <a href="#"><i class="fab fa-facebook fa-lg text-secondary"></i></a>
